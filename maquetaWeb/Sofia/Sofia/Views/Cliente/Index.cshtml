@model Sofia.ViewModels.IndexViewModel

@{
    ViewBag.Title = ViewBag.titulo;
}


<div class="col-md-6">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</div>
@using (Html.BeginForm(null, null, FormMethod.Get)) { 
<div class="col-md-4 col-md-offset-2" style="margin-bottom:2em;">
    <div class="col-lg-12">
        <div class="input-group">
            <input name="LimiteCredito" class="form-control" placeholder="Escribe el parametro de busqueda">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </div>
    </div>
</div>
}

<table class="table  table-condensed table-hover table-striped">
    <tr style="background-color: dimgray !important;">
        @{

            var cl = new Sofia.Models.Cliente();
         }
        <th style="width:20%">
            @Html.DisplayNameFor(model => cl.Cedula )
        </th>
        <th style="width:25%">
           @Html.DisplayNameFor(model => cl.Nombres)
        </th>
        <th style="width:25%">
          @Html.DisplayNameFor(model => cl.Apellidos)
        </th>
     
        <th style="width:15%">
         @Html.DisplayNameFor(model => cl.LimiteCredito)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model.Clientes)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.LimiteCredito)
        </td>
       
        <td>
           
            @Html.ActionLink("Edit", "Create", new{id = item.Id}, new { @class = "btn btn-success" })
            @*@Html.ActionLink("Delete", "Delete",new { id=item.Id},new { onclick = "mensaje()", id="btnDelete", tye })*@
            <a href="/Cliente/Delete/@item.Id" type="button" onclick="mensaje()" id="btnDelete" class="btn btn-warning">Delete</a>
           @*<button class="btn btn-warning" onclick="mensaje()" type="button">Borrar</button>*@
        </td>
    </tr>
}

</table>
@{Html.RenderPartial("_paginador", Model);}

