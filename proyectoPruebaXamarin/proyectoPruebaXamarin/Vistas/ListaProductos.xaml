<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoPruebaXamarin.Vistas.ListaProductos"
             Title="Lista de Productos">
    <StackLayout>
      
        <ListView x:Name="lstPersonas"
            HasUnevenRows="True" Margin="2">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ViewCell >
                        <StackLayout Margin="10">
                            <Label Text="{Binding CodProducto }" TextColor="Gray" FontSize="20"/>
                            <Label Text="{Binding NombreProducto}" FontSize="18"  TextColor="LightGray"/>
                            <Label Text="{Binding Descripcion}" TextColor="LightGray"/>
                            <Label Text="{Binding Fecha}" TextColor="LightGray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>